<h1>Blog Articles</h1>

<div style="margin-bottom: 20px;">
  <%= link_to 'Generate New Articles', new_blog_path, class: 'btn btn-success' %>
</div>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class="post-card">
      <h2><%= link_to post.title, blog_path(post), style: "text-decoration: none; color: inherit;" %></h2>
      <div class="meta">
        <span class="status-badge status-<%= post.status %>"><%= post.status %></span>
        <span style="margin-left: 10px;">Created: <%= post.created_at.strftime('%B %d, %Y') %></span>
      </div>
      <% if post.content.present? %>
        <p><%= truncate(post.content.gsub(/[#*\[\]()]/, ''), length: 200) %></p>
      <% end %>
      <div style="margin-top: 15px;">
        <%= link_to 'View', blog_path(post), class: 'btn' %>
        <%= link_to 'Edit', edit_blog_path(post), class: 'btn' %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="post-card">
    <p>No articles yet. <%= link_to 'Generate some articles', new_blog_path %> to get started!</p>
  </div>
<% end %>

