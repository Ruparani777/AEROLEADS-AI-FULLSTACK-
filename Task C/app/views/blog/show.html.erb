<div style="margin-bottom: 20px;">
  <%= link_to 'â† Back to Blog', blog_index_path, class: 'btn' %>
  <%= link_to 'Edit', edit_blog_path(@post), class: 'btn' %>
</div>

<div class="post-card">
  <h1><%= @post.title %></h1>
  <div class="meta">
    <span class="status-badge status-<%= @post.status %>"><%= @post.status %></span>
    <span style="margin-left: 10px;">Created: <%= @post.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
    <% if @post.updated_at != @post.created_at %>
      <span style="margin-left: 10px;">Updated: <%= @post.updated_at.strftime('%B %d, %Y at %I:%M %p') %></span>
    <% end %>
  </div>
  
  <hr style="margin: 20px 0; border: none; border-top: 1px solid #ddd;">
  
  <div style="line-height: 1.8;" class="markdown-content">
    <%= markdown(@post.content) %>
  </div>
  
  <% if @post.generation_log.present? %>
    <hr style="margin: 30px 0; border: none; border-top: 1px solid #ddd;">
    <details>
      <summary style="cursor: pointer; font-weight: bold; margin-bottom: 10px;">Generation Log</summary>
      <pre style="background: #f8f9fa; padding: 15px; border-radius: 4px; overflow-x: auto; font-size: 12px;"><%= @post.generation_log %></pre>
    </details>
  <% end %>
</div>

